rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is creating their own document
    function isCreatingOwnDocument(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to validate job data structure
    function isValidJobData() {
      return request.resource.data.keys().hasAll(['customerName', 'address', 'status', 'createdAt', 'createdBy'])
        && request.resource.data.customerName is string
        && request.resource.data.customerName.size() > 0
        && request.resource.data.customerName.size() <= 100
        && request.resource.data.address is string
        && request.resource.data.address.size() > 0
        && request.resource.data.address.size() <= 200
        && request.resource.data.status in ['capturing', 'processing', 'complete', 'error']
        && request.resource.data.createdBy == request.auth.uid;
    }

    // Helper function to validate update data
    function isValidJobUpdate() {
      return (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['createdBy']))
        && request.resource.data.customerName is string
        && request.resource.data.customerName.size() <= 100
        && request.resource.data.address is string
        && request.resource.data.address.size() <= 200
        && request.resource.data.status in ['capturing', 'processing', 'complete', 'error'];
    }

    match /jobs/{jobId} {
      // Allow read if user is authenticated and owns the job
      allow get: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
      
      // Allow list if user is authenticated (with query constraints in app)
      allow list: if isAuthenticated();
      
      // Allow create if authenticated and setting self as owner with valid data
      allow create: if isAuthenticated() 
        && request.resource.data.createdBy == request.auth.uid
        && isValidJobData();
      
      // Allow update if user owns the job and data is valid
      allow update: if isAuthenticated() 
        && resource.data.createdBy == request.auth.uid
        && isValidJobUpdate();
      
      // Allow delete if user owns the job
      allow delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    // Security audit log collection (for tracking security events)
    match /securityLogs/{logId} {
      // Only allow create by authenticated users
      allow create: if isAuthenticated();
      // No read/write allowed for security
      allow read, update, delete: if false;
    }
    
    // Default deny - must be explicit for all collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
